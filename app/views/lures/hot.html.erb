<div class="callout">
<h2 class="header-title">Recent Hot Lures</h2>
  <ul>
    <% if @hottest_lures.nil? %>
    <h5>Sorry, there are no reported lures matching your search request: <%= @search %></h5>
    <% else %>
    <h4>These lures matched your search by fish: <%= @search %> </h4>
    <% @hottest_lures.each do |lure, count| %>
      <li>
        <%= link_to lure.name, lure_path(lure) %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
