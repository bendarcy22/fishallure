<h3>Add a lure to our database:</h3>


<div class="row">
  <%= form_for @lure do |f|%>
  <div class="large-6 columns">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div class="large-6 columns">
    <%= f.label :manufacturer, "Manufacturer" %>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="row">
    <div class="center large-6 column">
      <%= f.label :category, "Category" %>
      <%= f.select(:category, options_for_select(@categories), :prompt => "Select a category") %>
    </div>
  </div>

    <%= f.label :lure_photo, "Picture of Lure" %>
    <%= f.file_field :lure_photo %>

    <%= f.submit "Add the Lure" %>
  <% end %>
</div>
